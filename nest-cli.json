{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/e2e-test/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/e2e-test/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/e2e-test",
  "projects": {
    "e2e-test": {
      "type": "application",
      "root": "apps/e2e-test",
      "entryFile": "main",
      "sourceRoot": "apps/e2e-test/src",
      "compilerOptions": {
        "tsConfigPath": "apps/e2e-test/tsconfig.app.json"
      }
    },
    "app": {
      "type": "application",
      "root": "apps/app",
      "entryFile": "main",
      "sourceRoot": "apps/app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app/tsconfig.app.json"
      }
    },
    "microservice": {
      "type": "application",
      "root": "apps/microservice",
      "entryFile": "main",
      "sourceRoot": "apps/microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/microservice/tsconfig.app.json"
      }
    },
    "memory-transport": {
      "type": "library",
      "root": "libs/memory-transport",
      "entryFile": "index",
      "sourceRoot": "libs/memory-transport/src",
      "compilerOptions": {
        "tsConfigPath": "libs/memory-transport/tsconfig.lib.json"
      }
    }
  }
}